<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingLeft="@dimen/layout_padding"
    android:paddingRight="@dimen/layout_padding">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewTodolist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/simple_list_item_1"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btAddToDo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="@dimen/floating_button_margin"
        android:layout_marginRight="@dimen/floating_button_margin"
        android:layout_marginBottom="@dimen/floating_button_margin"
        android:clickable="true"
        android:focusable="true"
        android:backgroundTint="@color/colorPrimary"
        android:src="@drawable/ic_baseline_add_24" />
</RelativeLayout>